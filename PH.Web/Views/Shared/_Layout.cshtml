<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(string.IsNullOrEmpty(ViewData["Title"] as string) ? "" : $"{ViewData["Title"]} |") Password Hashing</title>
    @RenderSection("head", false)
    @Html.Partial("_Favicons")

    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/css/bootstrap.min.css" />

    <environment include="Development">
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a title="Password Hashing" asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">
                    <img alt="Brand" src="/images/icon.png" height="25px">
                </a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a title="Online Password Hashing" asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a title="Generate an online BCrypt Hash" asp-area="" asp-controller="BCrypt" asp-action="Index">BCrypt</a></li>
                    <li><a title="Generate an online PBKDF2 Hash" asp-area="" asp-controller="PBKDF2" asp-action="Index">PBKDF2</a></li>
                    <li><a title="Generate an online SHA1 Hash" asp-area="" asp-controller="SHA1" asp-action="Index">SHA1</a></li>
                    <li><a title="Generate an online SHA256 Hash" asp-area="" asp-controller="SHA256" asp-action="Index">SHA256</a></li>
                    <li><a title="Generate an online SHA384 Hash" asp-area="" asp-controller="SHA384" asp-action="Index">SHA384</a></li>
                    <li><a title="Generate an online SHA512 Hash" asp-area="" asp-controller="SHA512" asp-action="Index">SHA512</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2019 - <a href="https://passwordhashing.com">passwordhashing.com</a></p>
            <p>Source code hosted <a href="https://github.com/ilivewithian/passwordhashing/">here.</p>
            <p>Some icons curtorsy of <a href="https://icons8.com/">Icon8</a> <span class="glyphicon glyphicon-heart" aria-hidden="true"></span> </p>
        </footer>
    </div>

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.0.min.js"
            async
            crossorigin="anonymous"
            integrity="sha384-K+ctZQ+LL8q6tP7I94W+qzQsfRV2a+AfHIi9k8z8l9ggpc8X+Ytst4yBo/hH+8Fk">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.7/bootstrap.min.js"
            async
            crossorigin="anonymous"
            integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa">
    </script>

    @RenderSection("Scripts", required: false)

    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-1566412-14"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());
        gtag('config', 'UA-1566412-14');
    </script>
</body>
</html>
